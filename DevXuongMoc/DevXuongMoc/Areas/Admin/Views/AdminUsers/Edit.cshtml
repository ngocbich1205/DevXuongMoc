@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1 class="text-center my-2">Chỉnh sửa người dùng</h1>


<hr />
<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data">
    <div class="col-md-6">
      
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Account" class="control-label">Tài khoản</label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaNhanSu" class="control-label">Mã nhân sự</label>
                <input asp-for="MaNhanSu" class="form-control" />
                <span asp-validation-for="MaNhanSu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
    </div>

    <!-- Cột 2 -->
    <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Avatar" class="control-label">Ảnh đại diện</label>
                <input asp-for="Avatar" type="file" class="form-control" />
                <span asp-validation-for="Avatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdPhongBan" class="control-label">Phòng ban</label>
                <input asp-for="IdPhongBan" class="form-control" />
                <span asp-validation-for="IdPhongBan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TrangThaiText" class="control-label">Trạng thái</label>
                <input asp-for="TrangThaiText" class="form-control" />
                <span asp-validation-for="TrangThaiText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsAdmin" class="control-label">Quản trị viên</label>
                <input asp-for="IsAdmin" class="form-control" />
                <span asp-validation-for="IsAdmin" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 text-center">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
       
    </div>
    </form>
</div>

