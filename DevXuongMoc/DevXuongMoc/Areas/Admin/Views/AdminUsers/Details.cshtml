@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1 class ="text-center my-2">Chi tiết người dùng</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4>Thông tin người dùng</h4>
        <hr />
        <div class="row">
            <!-- Cột 1 -->
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Tài khoản</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Account)</dd>

                    <dt class="col-sm-4">Mật khẩu</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                    <dt class="col-sm-4">Mã nhân sự</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MaNhanSu)</dd>

                    <dt class="col-sm-4">Tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                </dl>
            </div>

            <!-- Cột 2 -->
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Ảnh đại diện</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Avatar)</dd>

                    <dt class="col-sm-4">Phòng ban</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPhongBan)</dd>

                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NgayTao)</dd>

                    <dt class="col-sm-4">Người tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NguoiTao)</dd>

                    <dt class="col-sm-4">Ngày cập nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NgayCapNhat)</dd>

                    <dt class="col-sm-4">Người cập nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NguoiCapNhat)</dd>

                    <dt class="col-sm-4">Session Token</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.SessionToken)</dd>

                    <dt class="col-sm-4">Salt</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Salt)</dd>

                    <dt class="col-sm-4">Quản trị viên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsAdmin)</dd>

                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TrangThaiText)</dd>

                    <dt class="col-sm-4">Đã xóa</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsDelete)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

  