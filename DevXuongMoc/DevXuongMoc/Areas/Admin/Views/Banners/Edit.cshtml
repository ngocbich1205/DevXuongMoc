@model DevXuongMoc.Models.Banner

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h1 class="text-center my-2">Chỉnh sửa Banner</h1>

<div class="row">
    <form asp-action="Edit" enctype="multipart/form-data">
    <div class="col-md-6">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Image -->
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Title -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- SubTitle -->
            <div class="form-group">
                <label asp-for="SubTitle" class="control-label"></label>
                <input asp-for="SubTitle" class="form-control" />
                <span asp-validation-for="SubTitle" class="text-danger"></span>
            </div>

            <!-- Urls -->
            <div class="form-group">
                <label asp-for="Urls" class="control-label"></label>
                <input asp-for="Urls" class="form-control" />
                <span asp-validation-for="Urls" class="text-danger"></span>
            </div>

            <!-- Orders -->
            <div class="form-group">
                <label asp-for="Orders" class="control-label"></label>
                <input asp-for="Orders" class="form-control" />
                <span asp-validation-for="Orders" class="text-danger"></span>
            </div>

            <!-- Type -->
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
       
    </div>

    <div class="col-md-6">
       
            <!-- CreatedDate -->
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>

            <!-- UpdatedDate -->
            <div class="form-group">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>

            <!-- AdminCreated -->
            <div class="form-group">
                <label asp-for="AdminCreated" class="control-label"></label>
                <input asp-for="AdminCreated" class="form-control" />
                <span asp-validation-for="AdminCreated" class="text-danger"></span>
            </div>

            <!-- AdminUpdated -->
            <div class="form-group">
                <label asp-for="AdminUpdated" class="control-label"></label>
                <input asp-for="AdminUpdated" class="form-control" />
                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
            </div>

            <!-- Notes -->
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <!-- Status -->
            <div class="form-group">
                <label asp-for="StatusText" class="control-label"></label>
                <input asp-for="StatusText" class="form-control" />
                <span asp-validation-for="StatusText" class="text-danger"></span>
            </div>

            <!-- IsDelete Checkbox -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Isdelete" /> @Html.DisplayNameFor(model => model.Isdelete)
                </label>
            </div>

            <!-- Save Button -->
            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        
    </div>
    </form>
</div>


