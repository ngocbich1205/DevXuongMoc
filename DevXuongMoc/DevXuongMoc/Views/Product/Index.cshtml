@model X.PagedList.IPagedList<DevXuongMoc.Models.Product>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box-content all-product">
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel" style="margin-top:20px">
    <div class="carousel-inner">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/anhcat/trai-nghiem1.jpg" alt="" width="1100"
                     height="500">
                <div class="carousel-btn"><button class="btn-buy">Mua ngay</button></div>
            </div>
            <div class="carousel-item">
                <img src="~/images/banner.png" alt="" width="1100" height="500">
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

    <div class="all-product__item">
      
        <div class="row bg-white">
            <form action="" method="get" class="d-flex align-items-center mb-4">
                <div class="form-group me-2 mt-3">
                    <label class="visually-hidden" for="keyword">Tìm theo tên</label>
                    <input type="text" class="form-control" name="name" id="keyword" placeholder="Nhập tên cần tìm" />
                </div>
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search"></i>
                </button>
                
            </form>
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 col-xs-12">
                    <div class="product-card">
                        <img src="@item.Image" alt="@item.Title" class="product-card-img">
                        <div class="product-card-content">
                            <h6><a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h6>
                            <p class="old-price">@string.Format("{0:#,##0}", item.PriceOld)VND</p>
                            <p class="new-price">@string.Format("{0:#,##0}", item.PriceNew)VND</p>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id">
                                <i class="fi fi-bs-shopping-bag">Mua hàng</i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="d-flex justify-content-center mt-2">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions
   {
       LiElementClasses = new string[] { "page-item" },
       PageClasses = new string[] { "page-link" }
   })
    </div>
</div>

      
